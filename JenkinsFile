pipeline {
    agent any

    // Environment variables
    environment {
        SERVE_PORT = '3000'  // Port for local deployment
    }

    triggers {
        // Only build on SCM changes
        pollSCM('H/5 * * * *')  // optional: poll every 5 minutes; remove if using webhook
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                bat 'npm ci'
            }
        }

        stage('Tests') {
            steps {
                bat 'npm test -- --watchAll=false --passWithNoTests'
            }
        }

        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }

       stage('Deploy locally') {
            steps {
                 script {
                     // Stop existing process if running
                      bat 'pm2 delete react-app || exit 0'

                     // Start new process
                     bat "pm2 start npx --name react-app -- serve -s build -l ${env.SERVE_PORT}"

            echo "React app is now running at http://localhost:${env.SERVE_PORT}"
        }
    }
}


    post {
        success {
            echo "Pipeline completed successfully. App should be at http://localhost:${env.SERVE_PORT}"
        }
        failure {
            echo "Pipeline failed. Check the console logs for errors."
        }
    }
}
