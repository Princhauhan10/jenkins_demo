pipeline {
    agent any

    environment {
        SERVE_PORT = "3000"
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                bat 'npm ci'
            }
        }

        stage('Tests') {
            steps {
                bat 'npm test -- --watchAll=false --passWithNoTests'
            }
        }

        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }

        stage('Deploy with PM2') {
            steps {
                script {
                    // Kill old process if exists
                    bat 'npx pm2 delete react-app || exit 0'

                    // Start new process with serve
                    bat 'npx pm2 start serve --name react-app -- -s build -l 3000'
                }
            }
        }
    }

    post {
        success {
            echo "✅ Pipeline completed successfully. React app should be running at http://localhost:${env.SERVE_PORT}"
        }
        failure {
            echo "❌ Pipeline failed. Check the console logs for errors."
        }
    }
}
