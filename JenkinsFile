pipeline {
    agent any

    // Define environment variables
    environment {
        SERVE_PORT = '3000'  // Port for local deployment info
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                // Install node modules
                bat 'npm ci'
            }
        }

        stage('Tests') {
            steps {
                // Run tests; allow passing if no tests are found
                bat 'npm test -- --watchAll=false --passWithNoTests'
            }
        }

        stage('Build') {
            steps {
                // Create production build
                bat 'npm run build'
            }
        }

        stage('Deploy locally') {
            steps {
                script {
                    // Kill any previous node process (ignore errors if none found)
                    catchError(buildResult: 'SUCCESS', stageResult: 'SUCCESS') {
                        bat 'taskkill /F /IM node.exe'
                    }

                    // Install serve globally (if not already installed)
                    bat 'npm install -g serve'

                    // Start the React production build
                    bat "start cmd /c \"serve -s build -l %SERVE_PORT%\""

                    echo "React app is now running at http://localhost:${env.SERVE_PORT}"
                }
            }
        }
    }

    // Post actions must be **outside stages** but inside pipeline
    post {
        success {
            echo "Pipeline completed successfully. App should be at http://localhost:${env.SERVE_PORT}"
        }
        failure {
            echo "Pipeline failed. Check the console logs for errors."
        }
    }
}
