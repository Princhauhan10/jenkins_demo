pipeline {
    agent any

    // Environment variables
    environment {
        SERVE_PORT = '3000'  // Port for local deployment
    }

    triggers {
        // Only build on SCM changes
        pollSCM('H/5 * * * *')  // optional: poll every 5 minutes; remove if using webhook
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                bat 'npm ci'
            }
        }

        stage('Tests') {
            steps {
                bat 'npm test -- --watchAll=false --passWithNoTests'
            }
        }

        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }

        stage('Deploy locally') {
            steps {
                script {
                    // Stop any existing server if running
                    catchError(buildResult: 'SUCCESS', stageResult: 'SUCCESS') {
                        bat 'taskkill /F /IM node.exe || echo No previous server running'
                    }

                    // Install serve globally if not installed
                    bat 'npm install -g serve'

                    // Start server in background using Jenkins environment variable
                    bat "start cmd /c serve -s build -l ${env.SERVE_PORT}"

                    echo "React app is now running at http://localhost:${env.SERVE_PORT}"
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully. App should be at http://localhost:${env.SERVE_PORT}"
        }
        failure {
            echo "Pipeline failed. Check the console logs for errors."
        }
    }
}
