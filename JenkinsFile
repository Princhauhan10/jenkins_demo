pipeline {
    agent any

    environment {
        SERVE_PORT = '3000'
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                bat 'npm ci'
            }
        }

        stage('Tests') {
            steps {
                bat 'npm test -- --watchAll=false --passWithNoTests'
            }
        }

        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }

        stage('Deploy with PM2') {
            steps {
                script {
                    // Install PM2 globally if not installed
                    bat 'npm install -g pm2'

                    // Stop previous instance if running
                    bat 'pm2 delete react-app || exit 0'

                    // Start new React server with PM2
                    bat "pm2 start npx --name react-app -- serve -s build -l ${env.SERVE_PORT}"

                    echo "âœ… React app should now be running at http://localhost:${env.SERVE_PORT}"
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully."
        }
        failure {
            echo "Pipeline failed. Check the console logs for errors."
        }
    }
}
