pipeline {
    agent any

    // Define environment variables
    environment {
        SERVE_PORT = '3000'  // Port for local deployment info
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                // Install node modules
                bat 'npm ci'
            }
        }

        stage('Tests') {
            steps {
                // Run tests; allow passing if no tests are found
                bat 'npm test -- --watchAll=false --passWithNoTests'
            }
        }

        stage('Build') {
            steps {
                // Create production build
                bat 'npm run build'
            }
        }

        stage('Deploy locally') {
            steps {
                echo "Build is ready. You can serve it with 'serve -s build' if needed."
                // Optional: install and serve automatically (uncomment if you want)
                // bat 'npm install -g serve'
                // bat 'serve -s build -l %SERVE_PORT%'
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully. App should be at http://localhost:${env.SERVE_PORT}"
        }
        failure {
            echo "Pipeline failed. Check the console logs for errors."
        }
    }
}
